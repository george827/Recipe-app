<div class="card">
<div class="card-header">
  <h3>Edit ingredient</h3>
</div>
  <div class="card-body">
    <%= form_with model: @recipe_food, url: recipe_recipe_food_path, method: :put do |f| %>
      <%= f.hidden_field :id, value: @recipe_food.id %>
      <%= f.hidden_field :recipe_id, value: @recipe_food.recipe_id %>
      <div class="field form-group m-3">
        <%= f.select :food_id, @foods.map { |food| [food.name, food.id] }, {}, { class: "form-control p-2"} %>
      </div>
      <div class="field form-group m-3">
        <%= f.number_field :quantity, placeholder: 'Quantity', min: 0, required: true, class: "form-control p-2" %>
      </div>
      <div class="actions">
        <%= f.submit "Add ingredient", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>


