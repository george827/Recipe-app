<div class="card">
  <div class="card-header">
    <h4> Create a new recipe </h4>
  </div>
  <div class="card-body">
  <%= form_with model: @recipe do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="field  form-group">    
      <%= f.text_field :name, placeholder: 'Recipe name', class: "form-control" %>
    </div>
    <br/>
    <div class="field  form-group">
      <%= f.number_field :preparation_time, placeholder: 'Preparation Time (minutes)', class: "form-control" %>
    </div>
    <br/>
    <div class="field  form-group">
      <%= f.number_field :cooking_time, placeholder: 'Cooking Time (minutes)', class: "form-control" %>
    </div>
    <br/>
    <div class="field  form-group">
    <%= f.text_area :description, placeholder: 'Description', size: '50x5', class: "form-control" %>
    </div>
    <br/>

    <div>
      <%= f.label :public, "Public" %>
      <%= f.check_box :public %>
    </div>
    <br/>
    <%= f.submit "Create recipe", class: 'btn btn-primary'%>
  <% end %>
  </div>
</div>